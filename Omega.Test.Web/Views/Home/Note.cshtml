@model NoteViewModel
@{
    ViewData["Title"] = "Note Page";
}

<div class="row">
    <div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Notes</h3>
    </div>
    <div class="panel-body">
        <form asp-action="Note" asp-controller="Home" method="post">
            <div class="form-group">

                <textarea class="form-control" asp-for="@Model.NoteText" rows="3"></textarea>
                <span asp-validation-for="@Model.NoteText" class="validation-error"></span>

            </div>
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.Index" />
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn"
               asp-controller="Home"
               asp-action="Candidate"
               asp-route-id="@Model.Id">
                Cancel
            </a>
        </form>
    </div>
    </div>
</div>
