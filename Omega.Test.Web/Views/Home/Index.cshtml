@model CandidateListViewModel
@{
    ViewData["Title"] = "Home Page";
}


@{
    var previousClass=  Model.Paging.CurrentPage==1 ? "page-item disabled" : "page-item";
    var nextClass=  Model.Paging.CurrentPage==Model.Paging.TotalPages ? "page-item disabled" : "page-item";
 }

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Candidates</h3>
        </div>
        <div class="panel-body">


            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Surname</th>
                    <th scope="col">First name</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var candidate in Model.Candidates)
                {
                    <tr data-href="/home/candidate?id=@candidate.Id">
                        <td>@candidate.Surname</td>
                        <td>@candidate.FirstName</td>
                    </tr>
                }
               
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="row">

        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="@previousClass">
                    <a class="page-link"
                        asp-controller="Home"
                        asp-action="Index"
                        asp-route-page="@Model.Paging.Previous">
                    Previous
                    </a>
                </li>
                <li class="@nextClass">
                    <a class="page-link"
                       asp-controller="Home"
                       asp-action="Index"
                       asp-route-page="@Model.Paging.Next">
                        Next
                    </a>
                </li>
            </ul>

       </nav>
        Page @Model.Paging.CurrentPage of @Model.Paging.TotalPages
</div>

